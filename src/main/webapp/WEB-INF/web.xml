<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--start page-->
    <servlet-mapping>
        <servlet-name>StartServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StartServlet</servlet-name>
        <servlet-class>ua.myhospital.servlet.StartServlet</servlet-class>
    </servlet>


    <!--FOR REG ONLY-->
    <servlet>
        <servlet-name>ForReg</servlet-name>
        <jsp-file>/Reg.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
    <servlet-name>ForReg</servlet-name>
    <url-pattern>/reg</url-pattern>
</servlet-mapping>



        <!--filter check exist session for sign in-->

<servlet-mapping>
<servlet-name>AuthServlet</servlet-name>
<url-pattern>/auth</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>AuthServlet</servlet-name>
<servlet-class>ua.myhospital.servlet.AuthServlet</servlet-class>
</servlet>
        <!--add user-->
<servlet-mapping>
<servlet-name>Add</servlet-name>
<url-pattern>/add</url-pattern> 
</servlet-mapping>

<servlet>
<servlet-name>Add</servlet-name>
<servlet-class>ua.myhospital.servlet.Add</servlet-class>
</servlet>


